#!/bin/bash

# Path to the log file
LOG_FILE="/tmp/1671700-linux-backup-storage-review/disk_usage.log"

# Extract sizes > 5120 KB, sum them
total_kb=$(awk '$1 > 5120 {sum += $1} END {print sum}' "$LOG_FILE")

# Convert to MB and format to 2 decimal places
total_mb=$(awk -v kb="$total_kb" 'BEGIN {printf "%.2f MB\n", kb / 1024}')
echo "$total_mb"