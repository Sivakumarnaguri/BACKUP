#!/bin/bash

LOG_FILE="/tmp/1671700-linux-backup-storage-review/disk_usage.log"

# Filter lines with size > 5120 KB (i.e., > 5MB), sum them
total_kb=$(awk '$1+0 > 5120 {sum += $1} END {print sum+0}' "$LOG_FILE")

# Convert total KB to MB, round to two decimal places, and append MB
awk -v kb="$total_kb" 'BEGIN {printf "%.2f MB\n", kb / 1024}'